<?xml version="1.0" encoding="utf-8"?>
<!-- flex-extract-classes.xml -->
<project name="FlexBuildProperties" basedir=".">       	
	
	<import file="machine-properties.xml"/>
	
	<!-- The following properties are static -->
	<property name="dir.vidiun.artifacts" value="${dir.vidiun.cihome}/artifacts" description="Vidiun CI artifacts directory" />
	<property name="dir.vidiun.bin" value="${dir.vidiun.artifacts}/bin" description="Vidiun CI bin output directory" />
	<property name="dir.vidiun.resources" value="${dir.vidiun.cihome}/resources" description="Vidiun CI resources directory" />
	<property name="dir.vidiun.ant" value="${dir.vidiun.resources}/ant" description="Vidiun ant resources directory" />
	<property name="dir.vidiun.flexlibs" value="${dir.vidiun.resources}/flexlibs" description="Vidiun flex external libs directory" />
	<property name="flex.compile.debug" value="false" description="Default build is with debug=false" />
	
	<!-- Define the flex ant tasks -->
	<taskdef resource="flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar"/>
		
	<import file="flex-extract-classes.xml" />	
</project>